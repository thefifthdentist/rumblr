<% counter = 0 %>
<% @posts.each do |post| %>
  <% break if counter == 20 %>
  <% if post.user == nil %>
  <% else %>
  <% counter += 1 %>

  <h2> <%= post.title %> </h2>
  </br> <%="by #{post.user.username}"%>
  <p class="content"> <%= post.content %> </p>

  <p> <%= "#{post.created_at.strftime("%b %d, %Y")}" %> </p>
  <% end %>
<% end %>
